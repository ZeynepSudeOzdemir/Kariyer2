@model IQueryable<Data.Resume>
@{
    ViewBag.Title = "Anasayfa";
}
@foreach (var kariy in Model)
{
    <div class="row">
        <h2>@kariy.Başlık</h2>
        <hr />
       
        <hr />
        <div>
            @Html.Raw(kariy.Text)
        </div>
        <div class="well posts-detail">
            @Html.ActionLink("Devamını oku", "Show", "Kariyer", new { id = kariy.Id }, null) |
            @Html.ActionLink(kariy.Category.Title, "Index", "Kariyer", new { id = kariy.Category.Id }, null) |
            @kariy.Comment.Count Yorum |
            
        </div>
    </div>
}
<hr />
<div class="row pull-right">
    @Html.ActionLink("Sonraki sayfa", "Index",
    new { start = ViewBag.start, pageSize = ViewBag.pageSize })
</div>

